local player = game.Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui")

-- Create a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.ResetOnSpawn = false
screenGui.Name = "TeleportGui"
screenGui.Parent = gui

-- Create a draggable frame for the GUI
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.8, 0, 0.5, 0) -- Scaled for mobile screens
mainFrame.Position = UDim2.new(0.1, 0, 0.25, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black background
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

-- Add a UI corner for rounded edges
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0.05, 0)
uiCorner.Parent = mainFrame

-- Title Label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0.15, 0)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255) -- White background
titleLabel.TextColor3 = Color3.fromRGB(0, 0, 0) -- Black text
titleLabel.TextScaled = true
titleLabel.Font = Enum.Font.GothamBold
titleLabel.Text = "Teleport & Damage Script"
titleLabel.Parent = mainFrame

-- Status Label
local statusLabel = Instance.new("TextLabel")
statusLabel.Size = UDim2.new(1, -20, 0.2, 0) -- Margins for better layout
statusLabel.Position = UDim2.new(0, 10, 0.2, 0)
statusLabel.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- White text
statusLabel.TextScaled = true
statusLabel.Font = Enum.Font.Gotham
statusLabel.Text = "Ready to Teleport"
statusLabel.Parent = mainFrame

-- Teleport Button
local teleportButton = Instance.new("TextButton")
teleportButton.Size = UDim2.new(1, -20, 0.2, 0)
teleportButton.Position = UDim2.new(0, 10, 0.45, 0)
teleportButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255) -- White button
teleportButton.TextColor3 = Color3.fromRGB(0, 0, 0) -- Black text
teleportButton.TextScaled = true
teleportButton.Font = Enum.Font.GothamBold
teleportButton.Text = "Teleport Now"
teleportButton.Parent = mainFrame

-- Credits Label
local creditsLabel = Instance.new("TextLabel")
creditsLabel.Size = UDim2.new(1, 0, 0.1, 0)
creditsLabel.Position = UDim2.new(0, 0, 0.85, 0)
creditsLabel.BackgroundTransparency = 1
creditsLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- White text
creditsLabel.TextScaled = true
creditsLabel.Font = Enum.Font.Gotham
creditsLabel.Text = "Credits: leftarmout"
creditsLabel.Parent = mainFrame

-- Variables
local teleportCoordinates = Vector3.new(-32.31, 593.24, 811.43)
local teleporting = false

-- Function to remove forcefield
local function removeForceField()
    local character = player.Character
    if character then
        local forceField = character:FindFirstChildOfClass("ForceField")
        if forceField then
            forceField:Destroy()
        end
    end
end

-- Teleport function
local function teleportCharacter()
    local character = player.Character
    if character and character:FindFirstChild("HumanoidRootPart") then
        character.HumanoidRootPart.CFrame = CFrame.new(teleportCoordinates)
    end
end

-- Apply damage function
local function applyDamage()
    local character = player.Character
    if character and character:FindFirstChild("Humanoid") then
        character.Humanoid:TakeDamage(999999999)
    end
end

-- Teleport and damage process
local function teleportAndDamage()
    removeForceField()
    teleportCharacter()
    statusLabel.Text = "Teleported! Applying Damage..."
    wait(1.3) -- 1.3 seconds before applying damage
    applyDamage()
    statusLabel.Text = "Process Complete!"
end

-- Teleport Button functionality
teleportButton.MouseButton1Click:Connect(function()
    statusLabel.Text = "Teleporting..."
    teleportAndDamage()
end)

-- Handle character respawn and repeat teleportation
player.CharacterAdded:Connect(function(character)
    character:WaitForChild("Humanoid")
    character:WaitForChild("HumanoidRootPart")
    wait(0.5) -- Small delay to ensure character loading
    teleportAndDamage()
end)
