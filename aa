local player = game.Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui")

-- Create a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.ResetOnSpawn = false
screenGui.Name = "TeleportGui"
screenGui.Parent = gui

-- Create a draggable frame for the GUI
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.3, 0, 0.4, 0)
mainFrame.Position = UDim2.new(0.35, 0, 0.3, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

-- Add a UI corner for rounded edges
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0.05, 0)
uiCorner.Parent = mainFrame

-- Title Label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0.15, 0)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextScaled = true
titleLabel.Font = Enum.Font.GothamBold
titleLabel.Text = "Kill Grind Script"
titleLabel.Parent = mainFrame

-- Dropdown Button
local dropdownButton = Instance.new("TextButton")
dropdownButton.Size = UDim2.new(0.9, 0, 0.1, 0)
dropdownButton.Position = UDim2.new(0.05, 0, 0.2, 0)
dropdownButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
dropdownButton.TextColor3 = Color3.fromRGB(255, 255, 255)
dropdownButton.TextScaled = true
dropdownButton.Font = Enum.Font.Gotham
dropdownButton.Text = "Options"
dropdownButton.Parent = mainFrame

-- Dropdown Menu Frame
local dropdownMenu = Instance.new("Frame")
dropdownMenu.Size = UDim2.new(0.9, 0, 0.2, 0)
dropdownMenu.Position = UDim2.new(0.05, 0, 0.31, 0)
dropdownMenu.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
dropdownMenu.Visible = false
dropdownMenu.Parent = mainFrame

local uiCornerMenu = Instance.new("UICorner")
uiCornerMenu.CornerRadius = UDim.new(0.05, 0)
uiCornerMenu.Parent = dropdownMenu

-- Add "Kill Grind" option
local killGrindButton = Instance.new("TextButton")
killGrindButton.Size = UDim2.new(1, -10, 1, 0)
killGrindButton.Position = UDim2.new(0, 5, 0, 0)
killGrindButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
killGrindButton.TextColor3 = Color3.fromRGB(255, 255, 255)
killGrindButton.TextScaled = true
killGrindButton.Font = Enum.Font.Gotham
killGrindButton.Text = "Kill Grind"
killGrindButton.Parent = dropdownMenu

-- Toggle dropdown menu visibility
dropdownButton.MouseButton1Click:Connect(function()
    dropdownMenu.Visible = not dropdownMenu.Visible
end)

-- Variables
local teleportCoordinates = Vector3.new(-32.31, 593.24, 811.43)
local teleporting = false

-- Function to remove forcefield
local function removeForceField()
    local character = player.Character
    if character then
        local forceField = character:FindFirstChildOfClass("ForceField")
        if forceField then
            forceField:Destroy()
        end
    end
end

-- Teleport function
local function teleportCharacter()
    local character = player.Character
    if character and character:FindFirstChild("HumanoidRootPart") then
        character.HumanoidRootPart.CFrame = CFrame.new(teleportCoordinates)
    end
end

-- Apply damage function
local function applyDamage()
    local character = player.Character
    if character and character:FindFirstChild("Humanoid") then
        character.Humanoid:TakeDamage(999999999)
    end
end

-- Teleport and damage process
local function teleportAndDamage()
    removeForceField()
    teleportCharacter()
    wait(1.3) -- 1.3 seconds before applying damage
    applyDamage()
end

-- Handle "Kill Grind" button click
killGrindButton.MouseButton1Click:Connect(function()
    teleportAndDamage()
end)

-- Handle character respawn and repeat teleportation
player.CharacterAdded:Connect(function(character)
    character:WaitForChild("Humanoid")
    character:WaitForChild("HumanoidRootPart")
    wait(0.5) -- Small delay to ensure character loading
    teleportAndDamage()
end)
