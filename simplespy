-- Anti-Cheat Script
local Players = game:GetService("Players")

-- Function to simulate banning a player
local function scareScripter(player)
    -- Check if player is valid
    if player then
        -- Send a fake ban message
        player:Kick("You have been banned for suspicious activity. If you think this is a mistake, contact Ragnar admins. Bye bye for now scripter!")
        print(player.Name .. " was kicked for suspected scripting.")
    end
end

-- Detect players running unauthorized scripts
Players.PlayerAdded:Connect(function(player)
    player.Chatted:Connect(function(message)
        -- Replace "SuspiciousCommand" with the actual trigger
        if message == "SuspiciousCommand" then
            scareScripter(player)
        end
    end)
end)
