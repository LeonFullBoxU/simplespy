local player = game.Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui")

-- Create a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.ResetOnSpawn = false
screenGui.Name = "DropdownGui"
screenGui.Parent = gui

-- Create a main frame for the GUI
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.2, 0, 0.5, 0) -- Scaled to be small like your screenshot
mainFrame.Position = UDim2.new(0.02, 0, 0.02, 0) -- Top-left corner
mainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
mainFrame.BorderSizePixel = 1
mainFrame.BorderColor3 = Color3.fromRGB(0, 0, 0)
mainFrame.Parent = screenGui

-- Add a UI corner for rounded edges
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0.05, 0)
uiCorner.Parent = mainFrame

-- Dropdown Header
local dropdownHeader = Instance.new("TextButton")
dropdownHeader.Size = UDim2.new(1, 0, 0.1, 0)
dropdownHeader.Position = UDim2.new(0, 0, 0, 0)
dropdownHeader.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
dropdownHeader.TextColor3 = Color3.fromRGB(255, 255, 255)
dropdownHeader.TextScaled = true
dropdownHeader.Font = Enum.Font.GothamBold
dropdownHeader.Text = "Combat"
dropdownHeader.Parent = mainFrame

-- Dropdown Menu Frame
local dropdownMenu = Instance.new("Frame")
dropdownMenu.Size = UDim2.new(1, 0, 0, 0) -- Initially hidden
dropdownMenu.Position = UDim2.new(0, 0, 0.1, 0)
dropdownMenu.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
dropdownMenu.ClipsDescendants = true
dropdownMenu.Parent = mainFrame

-- Add items to the dropdown
local optionHeight = 0.15
local isMenuOpen = false

-- Add "Kill Grind" option with checkbox
local killGrindFrame = Instance.new("Frame")
killGrindFrame.Size = UDim2.new(1, 0, optionHeight, 0)
killGrindFrame.Position = UDim2.new(0, 0, 0, 0)
killGrindFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
killGrindFrame.Parent = dropdownMenu

local checkbox = Instance.new("TextButton")
checkbox.Size = UDim2.new(0.15, 0, 0.7, 0)
checkbox.Position = UDim2.new(0.05, 0, 0.15, 0)
checkbox.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
checkbox.Text = ""
checkbox.Parent = killGrindFrame

local checkboxLabel = Instance.new("TextLabel")
checkboxLabel.Size = UDim2.new(0.7, 0, 1, 0)
checkboxLabel.Position = UDim2.new(0.25, 0, 0, 0)
checkboxLabel.BackgroundTransparency = 1
checkboxLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
checkboxLabel.TextScaled = true
checkboxLabel.Font = Enum.Font.Gotham
checkboxLabel.Text = "Kill Grind"
checkboxLabel.Parent = killGrindFrame

-- Toggle checkbox state
local isChecked = false
checkbox.MouseButton1Click:Connect(function()
    isChecked = not isChecked
    checkbox.BackgroundColor3 = isChecked and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(100, 100, 100)
    if isChecked then
        -- Call your teleport and damage functions here
        teleportAndDamage()
    end
end)

-- Dropdown Header functionality
dropdownHeader.MouseButton1Click:Connect(function()
    isMenuOpen = not isMenuOpen
    dropdownMenu:TweenSize(
        isMenuOpen and UDim2.new(1, 0, optionHeight, 0) or UDim2.new(1, 0, 0, 0),
        "Out",
        "Sine",
        0.2,
        true
    )
end)

-- Functions (from your original script)
local teleportCoordinates = Vector3.new(-32.31, 593.24, 811.43)

local function removeForceField()
    local character = player.Character
    if character then
        local forceField = character:FindFirstChildOfClass("ForceField")
        if forceField then
            forceField:Destroy()
        end
    end
end

local function teleportCharacter()
    local character = player.Character
    if character and character:FindFirstChild("HumanoidRootPart") then
        character.HumanoidRootPart.CFrame = CFrame.new(teleportCoordinates)
    end
end

local function applyDamage()
    local character = player.Character
    if character and character:FindFirstChild("Humanoid") then
        character.Humanoid:TakeDamage(999999999)
    end
end

local function teleportAndDamage()
    removeForceField()
    teleportCharacter()
    wait(1.3)
    applyDamage()
end

-- Handle character respawn
player.CharacterAdded:Connect(function(character)
    character:WaitForChild("Humanoid")
    character:WaitForChild("HumanoidRootPart")
    wait(0.5)
    if isChecked then
        teleportAndDamage()
    end
end)
